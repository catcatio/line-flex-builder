{
    "compilerOptions": {
        "strictFunctionTypes": true,
        "types": [
            "node"
        ],
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "strictNullChecks": true,
        "allowJs": false,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "jsx": "react",
        "target": "es2015",
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}